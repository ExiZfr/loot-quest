# Firebase Admin SDK
# Path to your Firebase service account JSON file
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Lootably Configuration
LOOTABLY_SECRET=your_lootably_secret_key_here

# Optional: Lootably IP Whitelist (comma-separated)
# Leave empty to disable IP whitelist check
LOOTABLY_IP_WHITELIST=

# Server Configuration
PORT=3000
NODE_ENV=production

# Redis Configuration (High-Performance)
REDIS_URL=redis://127.0.0.1:6379

# JWT Secret (Change in production!)
JWT_SECRET=your_super_secret_jwt_key_here

# Discord OAuth2
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_REDIRECT_URI=https://yourdomain.com/api/auth/discord/callback

# Discord Webhook (Support Notifications)
DISCORD_WEBHOOK_URL=

# VPS Deployment Configuration
VPS_HOST=82.165.138.12
VPS_PORT=22
VPS_USERNAME=root
VPS_PASSWORD=your_vps_password_here
VPS_REMOTE_PATH=/var/www/lootquest
